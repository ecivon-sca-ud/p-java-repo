import java.util.Scanner;
//import javax.swing.JOptionPane;

public class Main
{
    public static void main(String[] args)
    {
      double x,y,z;
      Scanner scanner= new Scanner(System.in);
      //Makes in/out from user possible via OOP.

      System.out.println("Enter 1st shorter side of right triangle.");
      x= scanner.nextDouble();
      //Lets our user give input, as discussed earlier.

      System.out.println("Now enter 2nd shorter side of right triangle.");
      y= scanner.nextDouble();

      z= Math.sqrt((x*x)+(y*y));
      //Nice. Seems Java has  math fns by default. No need to import a library beforehand!
      System.out.println("Your right triangle's hypotenuse is "+z+" units long.");

scanner.close();
      //Not essential, but good practice.
    }
}
